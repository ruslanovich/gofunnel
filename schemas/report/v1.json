{
  "$id": "https://gofunnel.local/schemas/report/v1.json",
  "title": "TranscriptAnalysisReportV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "overview",
    "highlights",
    "nextSteps",
    "riskLevel"
  ],
  "properties": {
    "overview": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    },
    "highlights": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 240
      }
    },
    "nextSteps": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "owner",
          "action"
        ],
        "properties": {
          "owner": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "action": {
            "type": "string",
            "minLength": 1,
            "maxLength": 280
          },
          "dueDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        }
      }
    },
    "riskLevel": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    }
  }
}
